<Window x:Name="frm_main" x:Class="ClockWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClockWidget"
        Width="1920" Height="1080"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent" 
        ResizeMode="NoResize" ShowInTaskbar="False" 
        Topmost="True" WindowStartupLocation="CenterScreen" Cursor="Hand">
    <Grid>
        <Label x:Name="lbl_time" Content="00:00" VerticalAlignment="Top" 
               FontWeight="Bold" HorizontalAlignment="Left" Foreground="White" FontSize="70" Margin="0" BorderThickness="0"  />
    </Grid>
</Window>
